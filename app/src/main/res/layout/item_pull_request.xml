<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/cardview_light_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/user_dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/default_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PR Title :"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/user_dp"
        app:layout_constraintTop_toTopOf="@id/user_dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pr_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        tools:text="PR Title jhfvkjhfkjvhigrhuighrgihbighibhjfbvjkbrfjjfbvjkbrn:"
        android:textColor="#673AB7"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/pr_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pr_text"
        app:layout_constraintTop_toTopOf="@id/pr_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/created_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created At :"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/user_dp"
        app:layout_constraintTop_toBottomOf="@id/pr_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/created_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        tools:text="PR Title jhfvkjhfkjvhigrhuighrgihbighibhjfbvjkbrfjjfbvjkbrn:"
        android:textColor="#673AB7"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/created_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/created_text"
        app:layout_constraintTop_toTopOf="@id/created_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/closed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closed At :"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/user_dp"
        app:layout_constraintTop_toBottomOf="@id/created_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/closed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        tools:text="PR Title jhfvkjhfkjvhigrhuighrgihbighibhjfbvjkbrfjjfbvjkbrn:"
        android:textColor="#673AB7"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/closed_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/closed_text"
        app:layout_constraintTop_toTopOf="@id/closed_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/user_dp"
        app:layout_constraintTop_toBottomOf="@id/closed_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        tools:text="PR Title jhfvkjhfkjvhigrhuighrgihbighibhjfbvjkbrfjjfbvjkbrn:"
        android:textColor="#673AB7"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_name"
        app:layout_constraintTop_toTopOf="@id/user_name" />
</androidx.constraintlayout.widget.ConstraintLayout>